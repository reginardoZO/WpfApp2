<UserControl x:Class="WpfApp2.ConduitsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Loaded="Grid_Loaded" x:Name="ContentGrid">
        <!-- Level -->
        <TextBlock HorizontalAlignment="Left" Margin="55,30,0,0" TextWrapping="Wrap" Text="Level" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbLevel" HorizontalAlignment="Left" Margin="103,27,0,0" VerticalAlignment="Top" Width="110" Height="22" SelectionChanged="cmbLevel_SelectionChanged"/>

        <!-- Type -->
        <TextBlock HorizontalAlignment="Left" Margin="55,72,0,0" TextWrapping="Wrap" Text="Type" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbType" HorizontalAlignment="Left" Margin="103,69,0,0" VerticalAlignment="Top" Width="110" Height="22" SelectionChanged="cmbType_SelectionChanged"/>

        <!-- Conductors/Cables -->
        <TextBlock HorizontalAlignment="Left" Margin="21,117,0,0" TextWrapping="Wrap" Text="Conductors" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbConductors" HorizontalAlignment="Left" Margin="103,114,0,0" VerticalAlignment="Top" Width="110" Height="22" SelectionChanged="cmbConductors_SelectionChanged"/>

        <!-- Amount Multi (quantidade de condutores para Multiconductor) -->
        <TextBlock HorizontalAlignment="Left" Margin="218,117,0,0" TextWrapping="Wrap" Text="Qty" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbAmountMulti" HorizontalAlignment="Left" Margin="239,114,0,0" VerticalAlignment="Top" Width="42" Height="22" SelectionChanged="cmbAmountMulti_SelectionChanged"/>
        <MediaElement x:Name="ArrowGifPlayer"
                  Source="pack://application:,,,/arrowGIF.gif" <!-- Pre-set source, assuming Build Action: Resource -->
                  LoadedBehavior="Manual"
                  UnloadedBehavior="Stop"
                  Visibility="Collapsed"
                  Width="24"  <!-- Adjust size as needed -->
                  Height="24" <!-- Adjust size as needed -->
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="286,114,0,0" /> <!-- Margin adjusted to be to the right of cmbAmountMulti (239 + 42 + 5 buffer = 286) -->

        <!-- Size -->
        <TextBlock HorizontalAlignment="Left" Margin="61,159,0,0" TextWrapping="Wrap" Text="Size" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbSize" HorizontalAlignment="Left" Margin="103,156,0,0" VerticalAlignment="Top" Width="110" Height="22"/>

        <!-- Loading Indicator -->
        <ProgressBar x:Name="LoadingIndicator"
                     IsIndeterminate="True"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Width="100"
                     Height="20"
                     Visibility="Collapsed"
                     Panel.ZIndex="10"/>
                     <!-- Ensure ZIndex is high enough if other elements could overlap -->
    </Grid>
</UserControl>
